#!/usr/bin/make -f

i=$(shell pwd)/debian/tmp
b=$(shell pwd)/debian/build

configure:
	@echo "--- Making configure script and configuring"
	./autogen.sh --prefix=/usr/X11R6 --with-gtk-prefix=/usr

Makefile:
	@echo "--- Configuring"
	./configure --prefix=/usr/X11R6 --with-gtk-prefix=/usr

build: configure Makefile build-debstamp
build-debstamp:
	@echo "--- Compiling"
	dh_testdir
	$(MAKE) all
	touch build-debstamp

clean:
	@echo "--- Cleaning"
	rm_testdir
	-rm -f build-debstamp install-debstamp
	-make distclean
	-rm -f `find . -name "*~"`
	-rm -rf `find . -name "\.deps"`
	-rm -rf `find . -name "\.libs"`
	-rm -rf debian/tmp `find debian/* -type d ! -name CVS ` debian/files* core
	-rm -f debian/*substvars

install: install-debstamp build
install-debstamp:
	@echo "--- Installing"
	dh_testdir
	dh_testroot
	dh_clean
	$(MAKE) install prefix=$(i)/@PREFIX@ exec_prefix=$(i)/@PREFIX@
	touch install-debstamp

install-save: install
	rm -rf $(i).saved
	cp -a $(i) $(i).saved

install-saved:
	rm -rf $(i)
	cp -a $(i).saved $(i)
	rm -rf $(b)
	touch install-debstamp

binary-indep: build install

binary-arch: build install \
		gnome-core@SUFFIX@ \
		gnome-icons@SUFFIX@ \
		gnome-panel@SUFFIX@ \
		gnome-session@SUFFIX@ \
		gnome-terminal@SUFFIX@ \
		gnome-help@SUFFIX@ \
		gnome-desktop@SUFFIX@

#
# gnome-core
#

gnome-core@SUFFIX@: install
	@echo "--- Building: $@"
	dh_installdocs       -p$@ -P$(b)/$@ \
					README NEWS AUTHORS
	dh_installchangelogs -p$@ -P$(b)/$@ \
					ChangeLog
	dh_movefiles         -p$@ -P$(b)/$@
	dh_strip             -p$@ -P$(b)/$@ 
	dh_compress          -p$@ -P$(b)/$@ 
	dh_fixperms          -p$@ -P$(b)/$@ 
	dh_installdeb        -p$@ -P$(b)/$@
	dh_gencontrol        -p$@ -P$(b)/$@
	dh_md5sums           -p$@ -P$(b)/$@
	dh_builddeb          -p$@ -P$(b)/$@

